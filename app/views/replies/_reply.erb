<div class="reply_avatar">
  <%= image_tag (reply.user.avatar_url), size: '64x64'%>
  <h3>&nbsp;<%= reply.user.rank_name_op_you(reply.comment.post.user, current_user) %>: <%= link_to reply.user.name, reply.user %></h3>
</div>

<%= render 'shared/timestamp', created_at: reply.created_at, updated_at: reply.updated_at %>

<div class="reply_content">
<% content_array = reply.content.split("\n") -%>
<% content_array.each do |x| -%>
  <%= x %>
  <br>
<% end -%>
</div>
