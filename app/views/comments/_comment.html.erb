<div class="comment_avatar">
  <%= image_tag (comment.user.avatar_url), size: '64x64'%>
  <h3>&nbsp;<%= comment.user.rank_name_op_you(comment.post.user, current_user) %>: <%= link_to comment.user.name, comment.user %></h3>
</div>

<%= render 'shared/timestamp', created_at: comment.created_at, updated_at: comment.updated_at %>

<div class="comment_content">
<% content_array = comment.content.split("\n") -%>
<% content_array.each do |x| -%>
  <%= x %>
  <br>
<% end -%>
</div>
