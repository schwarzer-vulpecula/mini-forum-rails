<div class="post_title">
  <h1><%= post.title %></h1>
</div>

<div class="post_avatar">
  <%= image_tag (post.user.avatar_url), size: '64x64'%>
  <h3>&nbsp;<%= post.user.rank_name_op_you(post.user, current_user) %>: <%= link_to post.user.name, post.user %></h3>
</div>

<p>
  <b>Posted On: </b>
  <%= post.created_at %>
   | 
  <b>Last Updated: </b>
  <%= post.updated_at %>
</p>

<div class="post_content">
<% content_array = post.content.split("\n") -%>
<% content_array.each do |x| -%>
  <%= x %>
  <br>
<% end -%>
</div>
