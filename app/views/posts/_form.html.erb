<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, size: "40" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, size: "60x20" %>
  </div>

  <% if current_user.staff? && post.new_record? %>
    <div class="check_box">
     <%= form.check_box :notify_users %>
     <%= form.label :notify_users, "Notify Users" %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
